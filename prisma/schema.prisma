generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model File {
  // service metadata
  id       String @id
  app      String
  key      String
  path     String @unique
  suffixId String @unique

  // analytics
  downloads Int

  // file metadata
  filename String
  filetype String
  filesize Int

  // data metadata

  @@index([path])
  @@index([suffixId])
  @@index([id, path, suffixId])
}
